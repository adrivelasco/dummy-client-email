{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "indent": [
      "error"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "no-console": "off",
    "no-tabs": "off",
    "no-useless-return": "off",
    "eqeqeq": "off",
    "react/prop-types": true,
    "react/no-children-prop": 0,
    "react/jsx-no-comment-textnodes": 0,
    "react/jsx-key": true,
    "react/jsx-space-before-trailing-slash": true,
    "react/jsx-alignment": true,
    "react/jsx-ban-props": false,
    "react/jsx-boolean-value": true,
    "react/jsx-curly-spacing": [
      true,
      "never"
    ],
    "react/jsx-no-bind": true,
    "react/jsx-no-lambda": true,
    "react/jsx-no-multiline-js": false,
    "react/jsx-no-string-ref": true,
    "react/jsx-use-translation-function": false,
    "react/self-closing-comp": true
  }
}